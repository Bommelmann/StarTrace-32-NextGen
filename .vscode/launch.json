{
  "version": "0.2.0",
  "configurations": [
    
    {
      "type": "gdbtarget",
      "request": "attach",
      "name": "Eclipse CDT GDB Adapter"
    },
    {
      "type": "espidf",
      "name": "Launch",
      "request": "launch"
    },
    {
      "preLaunchTask": "preRun",
      "name": "Startrace Nxt Gen",
      "type" : "cppdbg",
      "request": "launch",
      "cwd": "${workspaceFolder}/build",
      "program": "${workspaceFolder}/build/StarTrace-32-NextGen.elf",
      "miDebuggerPath": "C:/Users/beckj/.espressif/tools/xtensa-esp-elf-gdb/14.2_20240403/xtensa-esp-elf-gdb/bin/xtensa-esp32s3-elf-gdb.exe",
      "setupCommands": [
        { "text": "target remote 127.0.0.1:3333" },
        { "text": "set remote hardware-watchpoint-limit 2" },
        { "text": "monitor reset halt" },
        { "text": "flushregs" }
      ]
    }
  ]
}